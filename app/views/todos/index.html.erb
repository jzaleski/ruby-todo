<h1>Todos</h1>

<table class="list" cellpadding="0" cellspacing="0">
<% @todos.each do |todo| %>
	<%= form_for todo do |form| %>
	<tr>
		<td><%= check_box 'todo', 'completed', { :disabled => todo.new_record?, :onchange => 'this.form.submit();' } %></td>
		<td></td>
		<td><%= form.text_field :summary, :autocomplete => 'off' %></td>
	</tr>
	<% end %>
<% end %>
</table>
